# -- The default [workload](https://jasonb5.github.io/charts/site/guide/common-library/#workload) type
workload: deployment

image:
  # -- Container image repository
  repository: {{ image }}
  # -- Image tag
  # @default -- Chart.AppVersion
  tag:

env:
  # -- Set the timezone
  TZ: UTC
{%- if redis_enabled %}
  REDIS_HOST:
{% endif %}
{%- if mariadb_enabled %}
{% raw %}
  DB_HOST:
  DB_NAME: "{{ .Values.mariadb.auth.database }}"
  DB_USER: "{{ .Values.mariadb.auth.username }}"
  DB_PASS: "{{ .Values.mariadb.auth.password }}"
{% endraw %}
{% endif %}
{%- if postgresql_enabled %}
{% raw %}
  DB_HOST:
  DB_NAME: "{{ .Values.postgresql.auth.database }}"
  DB_USER: "{{ .Values.postgresql.auth.username }}"
  DB_PASS: "{{ .Values.postgresql.auth.password }}"
{% endraw %}
{% endif %}

# -- [Service](https://jasonb5.github.io/charts/site/guide/common-library/#service)
service:
  ports:
    default:
      # -- Default port
      port: {{ port }}

# -- [Ingress](https://jasonb5.github.io/charts/site/guide/common-library/#ingress)
ingress:
  # -- Enable/disable ingress
  enabled: false
  hosts:
    # -- Reference default service
  - name: default
    # -- Ingress hostname
    host:
  # -- [TLS](https://jasonb5.github.io/charts/site/guide/common-library/#tls)
  tls:
    # -- Enable/disable tls
    enabled: false

# -- [Persistence](https://jasonb5.github.io/charts/site/guide/common-library/#persistence)
persistence:
  config:
    # -- Enable/disable persistence
    enabled: false
    # -- Type of volume mount
    type: pvc
    # -- Size of volume
    size: 1Gi

{%- if redis_enabled %}
# -- Redis server, see Bitnami chart for [values](https://github.com/bitnami/charts/tree/main/bitnami/redis#parameters)
redis:
  enabled: true
  architecture: standalone
  auth:
    # -- Enable/disable authentication
    enabled: false
    sentinel: false
    # -- Instance password
    password:
  master:
    persistence:
      enabled: false
  replica:
    persistence:
      enabled: false
  sentinel:
    enabled: false
  metrics:
    enabled: false
{%- endif %}
{%- if mariadb_enabled %}
# -- MariaDB server, see Bitnami chart for [values](https://github.com/bitnami/charts/tree/main/bitnami/mariadb#parameters)
mariadb:
  enabled: true
  architecture: standalone
  auth:
    # -- Root database password
    rootPassword:
    database: {{ name }}
    username: {{ name }}
    # -- Database password
    password:
  primary:
    persistence:
      enabled: false
  secondary:
    persistence:
      enabled: false
  metrics:
    enabled: false
{%- endif %}
{%- if postgresql_enabled %}
# -- PostgreSQL server, see Bitnami chart for [values](https://github.com/bitnami/charts/tree/main/bitnami/postgresql#parameters)
postgresql:
  enabled: true
  architecture: standalone
  auth:
    # -- Root database password
    postgresPassword:
    database: {{ name }}
    username: {{ name }}
    # -- Database password
    password:
  primary:
    persistence:
      enabled: false
  readReplicas:
    persistence:
      enabled: false
  metrics:
    enabled: false
{%- endif %}
