# -- Default workload type
workload: deployment

image:
  # -- Image repository
  repository: {{ image }}
  # -- Image tag
  # @default -- Chart.AppVersion
  tag:

# -- Environment variables
env:
  # -- Set the timezone
  TZ: UTC

# -- Application services
service:
  ports:
    default:
      port: {{ port }}

# -- Application ingress
ingress:
  enabled: false
  hosts:
    default:
    - name: default

# -- Application persistence
persistence:
  config:
    enabled: false
    type: emptydir

  media:
    enabled: false
    type: emptydir

{% if redis_enabled %}
redis:
  enabled: false
  architecture: standalone
  auth:
    enabled: false
    sentinel: false
    password:
  master:
    persistence:
      enabled: false
  replica:
    persistence:
      enabled: false
  sentinel:
    enabled: false
  metrics:
    enabled: false
{% endif -%}
{%- if mariadb_enabled %}
mariadb:
  enabled: false
  architecture: standalone
  auth:
    rootPassword:
    database:
    username:
    password:
  primary:
    persistence:
      enabled: false
  secondary:
    persistence:
      enabled: false
  metrics:
    enabled: false
{% endif -%}
{%- if postgresql_enabled %}
postgresql:
  enabled: false
  architecture: standalone
  auth:
    postgresPassword:
    database:
    username:
    password:
  primary:
    persistence:
      enabled: false
  readReplicas:
    persistence:
      enabled: false
  metrics:
    enabled: false
{% endif -%}
